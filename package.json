{
  "name": "bilive_client",
  "version": "2.2.7",
  "description": "基于Node.JS的bilibili直播挂机系统",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run build:client && npm run build:view",
    "build:client": "tsc -p tsconfig.json && npm-run-posix-or-windows copy:client",
    "build:view": "webpack --config docs/webpack.conf.js && npm-run-posix-or-windows copy:view",
    "copy:client": "cp bilive/options.default.json build/bilive/",
    "copy:client:windows": "xcopy bilive\\options.default.json build\\bilive\\ /Y",
    "copy:view": "cp -r docs/view/ docs/index.html build/",
    "copy:view:windows": "xcopy docs\\view\\* build\\view\\ /Y && xcopy docs\\index.html build\\ /Y",
    "clean": "npm-run-posix-or-windows rmbuild && mkdir build && rimraf logs && mkdir logs",
    "rmbuild": "rm -rf build",
    "rmbuild:windows": "rmdir /S /Q build || exit 0",
    "start": "node build/app.js",
    "dev": "npm run build && npm run start"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "homepage": "https://github.com/ShmilyChen/bilive_client#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShmilyChen/bilive_client.git"
  },
  "author": "ShmilyChen",
  "license": "MIT",
  "devDependencies": {
    "@types/bootstrap": "^4.3.1",
    "@types/jquery": "^3.3.33",
    "@types/node": "^12.12.12",
    "@types/tough-cookie": "^2.3.6",
    "@types/ws": "^7.2.2",
    "cz-conventional-changelog": "^3.0.2",
    "ts-loader": "^6.2.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "buffer": "^5.4.3",
    "npm-run-posix-or-windows": "^2.0.2",
    "typescript": "^3.8.2",
    "rimraf": "^3.0.0"
  },
  "dependencies": {
    "form-data": "^3.0.0",
    "got": "^10.6.0",
    "tough-cookie": "^3.0.1",
    "ws": "^7.2.3"
  }
}
